<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
 
<struts-config>
	<form-beans>
		<form-bean name="sourceKeyForm"
			type="com.java.SourceKeyForm" />
		</form-beans>
	<action-mappings>
		<action path="/StrutsLocator"
			name="sourceKeyForm"
			type="com.java.StrutsLocatorAction" scope="request">
			<forward name="success" path="/ValueLocator.jsp" />
		</action>
	</action-mappings>
</struts-config>